<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".CatalogoActivity">


    <TableLayout
        android:id="@+id/productos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:id="@+id/precio_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unidad_row"
                android:layout_marginTop="5dp"
                android:text="Tipo producto: "
                android:textColor="@android:color/black" />
            <Spinner
                android:id="@+id/select_producto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lista_productos"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>


